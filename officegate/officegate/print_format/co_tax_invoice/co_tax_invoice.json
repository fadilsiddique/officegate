 "css": ".print-format {\n    padding:0px !important;\n}\n\n.full-content {\n        margin-left: 30px;\n    margin-right: 30px;\n}\n\n/*.print-format, body {*/\n/*    margin: 0 !important;*/\n/*    padding: 0 !important;*/\n/*}*/\n\n@media print {\n    @page {\n        margin: 20px !important;\n    }\n\n\n    body {\n        margin: 0 !important;\n        padding: 0 !important;\n        font-size: 12px;\n    }\n\n\n}",
